<!DOCTYPE html>
<html>
  <head>
    <title>Squirrul</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
    <header>
      <% if current_user %>
        <%= render "snipes/new" %>
        <div id="user-info">Logged in as <%= current_user.username %>. <%= link_to "Log Out", logout_path %></div>
      <% else %>
        <%#= link_to "Sign Up", signup_path %>
        <%= link_to "Log In", login_path %>
      <% end %>
    </header>
    <div id="main" role="main"><%= yield %></div>
  </body>
</html>
